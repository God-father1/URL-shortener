<body>
  
  <section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-col text-center w-full mb-20">
        <h1 class="text-xl text-blue-500 tracking-widest font-medium title-font mb-5">URL Shrinker</h1>


        <form action="/shortUrls" method="POST" class="my-10 form-inline">
          <label for="fullUrl" class="sr-only">Url</label>
          
          <input required placeholder="Paste Url Here" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2 py-2 px-4 rounded">
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">Shrink</button>
        </form>


      </div>

      <div class="flex flex-wrap -m-4">
        <% shortUrls.forEach(shortUrl => { %>
        <div class="p-4 md:w-1/3">
          <div class="flex rounded-lg h-full bg-gray-100 p-8 flex-col">
            <div class="flex items-center mb-3">
              
              <h2 class="text-blue-900 text-lg title-font font-medium"><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></h2>
            </div>
            <div class="flex-grow">
              <p class="leading-relaxed text-base"><%= shortUrl.full %></p>
              <br>

              <p>Number of Clicks: <%= shortUrl.clicks %></p>
              
            </div>
          </div>
        </div>
        <% }) %>
        
      </div>
    </div>
  </section>
  <div id="container">
    <div id="container-inside">
        <div id="circle-small"></div>
        <div id="circle-medium"></div>
        <div id="circle-large"></div>
        <div id="circle-xlarge"></div>
        <div id="circle-xxlarge"></div>
    </div>
  </div>
